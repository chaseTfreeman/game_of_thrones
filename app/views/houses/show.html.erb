<% flash.each do |type, message| %>
  <p><%= type %>: <%= message %></p>
<% end %>
<div class="whitespace"></div>
<div class="house-profile">
<h2>
  <%= @house.name %>
  <h2>
  <h3><%= link_to "Edit", edit_house_path(@house) %>
  <%= link_to "Delete", house_path(@house),
                                        method: :delete,
                                        data: { confirm: 'Are you sure?' } %></h3>

<hr>
<div class="houses">
<img class="sigil" src="<%= @house.img_url %>">
</div>
</p>House Words:</p><h4><%= @house.motto %></h4>
<p>Seat of Power:</p><h4><%= @house.seat %></h4>
<div>
<img src="<%= @house.seat_img %>">
</div>
</div>
